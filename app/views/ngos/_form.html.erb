

<!--             FORM                 -->

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">

          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">



                <%= form_for(@ngo) do |f| %>
                <% if @ngo.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(@ngo.errors.count, "error") %> prohibited this ngo from being saved:</h2>

                  <ul>
                    <% @ngo.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
                <% end %>

                <div class="form-group">
                  <%= f.label :name %><br>
                  <%= f.text_field :name, :class=>"form-control", :placeholder=>"Username", :value=>"" %>
                </div>
                <div class="form-group">
                  <%= f.label :address %><br>
                  <%= f.text_field :address, :class=>"form-control", :placeholder=>"address", :value=>"" %>
                </div>
                <div class="form-group">
                  <%= f.label :lat %><br>
                  <%= f.text_field :lat, :class=>"form-control", :placeholder=>"lat", :value=>"" %>
                </div>
                <div class="form-group">
                  <%= f.label :lang %><br>
                  <%= f.text_field :lang, :class=>"form-control", :placeholder=>"lang", :value=>"" %>
                </div>

                <div class="form-group">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <div class="controls">
                      <%= f.submit 'Submit',:name=>"button1id", :class=>"btn btn-success" %>
                    </div>
                  </div>
                  </div>
                </div>

                <% end %>


            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!--             END FORM             -->
