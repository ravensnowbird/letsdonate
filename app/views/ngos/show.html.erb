


<!--      FORM START                                          -->

<div class="container-fluid">
  <div class="row">
    <div class="col-md-8">
      <h3>NGO Details</h3>
    </div>
      <div class="col-md-4">
        <h3>Profile</h3>
      </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-xs-10">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 col-sm-8">
              <h2> <%= @ngo.name %> </h2>
              <p><strong>About: </strong>  </p>
              <p><strong>Address: </strong> <%= @ngo.address %> </p>
              <p><strong>Latitude: </strong> <%= @ngo.lat %> </p>
                <p><strong>Longitude: </strong> <%= @ngo.lang %>
              </p>
            </div><!--/col-->
            <div class="clearfix"></div>
            <div class="col-xs-12 col-sm-4">

            </div><!--/col-->
            <div class="col-xs-12 col-sm-4">

            </div><!--/col-->
            <div class="col-xs-12 col-sm-4">

            </div><!--/col-->
          </div><!--/row-->
        </div><!--/panel-body-->
      </div><!--/panel-->
    </div><!--/col-md-8-->

    <div class="col-md-4 col-xs-10">
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="row">
            <div class="col-xs-12 col-sm-8">


              <% if @notifier.incomplete? %>
               <%= render '/notifiers/form' %>
               <% else %>

               <div class="row">
                 <div class="col-xs-12 col-sm-8">
                   <p><strong>Name: </strong> <%= @notifier.name %> </p>
                   <p><strong>Email: </strong> <%= @notifier.email %> </p>
                   <p><strong>Mobile: </strong> <%= @notifier.phone %> </p>
                 </p>
               </div><!--/col-->
             </div><!--/row-->

             <% end %>


            </div>
          </div>
       </div>
     </div>
    </div>


  </div><!--/row-->
</div><!--/container-->
