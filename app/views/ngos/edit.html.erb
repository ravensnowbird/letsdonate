<h1>Editing Ngo</h1>

<%#= render 'form' %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-login">
        <div class="panel-heading">

          <hr>
        </div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12">



              <%= form_for(@ngo,:id=>"check-ngo-form") do |f| %>
              <% if @ngo.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@ngo.errors.count, "error") %> prohibited this ngo from being saved:</h2>

                <ul>
                  <% @ngo.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
              <% end %>

              <div class="form-group">
                <%= f.label :name, "NGO Name" %><br>
                <%= f.text_field :name, :class=>"form-control", :placeholder=>"NGO name" %>
              </div>
              <div class="form-group">
                <%= f.label :address %><br>
                <%= f.text_field :address, :class=>"form-control", :placeholder=>"Enter address" %>
              </div>
              <div class="form-group" style="display:none;">
                <%= f.label :lat, "Latitude" %><br>
                <%= f.text_field :lat,:name=>"latname",:id =>"lat-check", :class=>"form-control", :placeholder=>"Enter latitude" %>
              </div>
              <div class="form-group" style="display:none;">
                <%= f.label :lang,"Langitude" %><br>
                <%= f.text_field :lang,:name=>"langname",:id => "lang-check", :class=>"form-control", :placeholder=>"Enter langitude" %>
              </div>
              <div>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="form-group">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="controls">
          <%= f.submit 'Update',:name=>"button1id", :class=>"btn btn-success" %>
        </div>
      </div>
    </div>
  </div>

  <% end %>
</div>


<%= link_to 'Show', @ngo %> |
<%= link_to 'Back', ngos_path %>
