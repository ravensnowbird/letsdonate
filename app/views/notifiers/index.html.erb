<p id="notice"><%= notice %></p>

<h1>Listing Notifiers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Ngo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notifiers.each do |notifier| %>
      <tr>
        <td><%= notifier.name %></td>
        <td><%= notifier.phone %></td>
        <td><%= notifier.email %></td>
        <td><%= notifier.ngo %></td>
        <td><%= link_to 'Show', notifier %></td>
        <td><%= link_to 'Edit', edit_notifier_path(notifier) %></td>
        <td><%= link_to 'Destroy', notifier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

